<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item 
  	android:state_selected="true" android:state_checked="true"                               android:drawable="@color/list_bg_sc" />

  <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
  <item
  	android:state_focused="true"  android:state_enabled="false" android:state_pressed="true" android:drawable="@color/list_bg_fep" />
  <item 
  	android:state_focused="true"  android:state_enabled="false"                              android:drawable="@color/list_bg_fe" />
  <item 
  	android:state_focused="true"                                android:state_pressed="true" android:drawable="@color/list_bg_fp" />
  <item 
  	android:state_focused="false"                               android:state_pressed="true" android:drawable="@color/list_bg_p" />
  <item 
  	android:state_focused="true"  android:state_checked="true"                               android:drawable="@color/list_bg_fc" />
  <item 
  	android:state_focused="false" android:state_checked="true"                               android:drawable="@color/list_bg_c" />
  <item 
  	android:state_focused="true"                                                             android:drawable="@color/list_bg_f" />
  <item 
  	android:state_selected="true"                                                            android:drawable="@color/list_bg_s" />
</selector>
