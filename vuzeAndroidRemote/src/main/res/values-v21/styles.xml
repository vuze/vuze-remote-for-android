<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowActionModeOverlay">true</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
	</style>

	<style name="AppBaseThemeDark" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionModeOverlay">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">false</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
		<item name="actionBarSize">?android:attr/actionBarSize</item>
		<item name="homeAsUpIndicator">?android:attr/homeAsUpIndicator</item>
		<item name="switchStyle">@style/MySwitchStyle</item>

		<item name="android:windowContentTransitions">true</item>
	</style>

	<style name="MySwitchStyle" parent="@style/Base.Widget.AppCompat.CompoundButton.Switch">
		<item name="android:switchMinWidth">40dp</item>
		<item name="switchMinWidth">40dp</item>
	</style>

	<style name="CardButton" parent="Widget.AppCompat.ImageButton">
		<item name="android:backgroundTint">?android:colorAccent</item>
	</style>

	<style name="sidelist_main">
		<item name="android:background">?sidelist_content_bg</item>
		<item name="android:gravity">fill_vertical</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingBottom">@dimen/sidelist_padding_bottom</item>
		<item name="android:elevation">8dp</item>
	</style>

	<style name="tint_textColorPrimary">
		<item name="android:tint">?android:textColorPrimary</item>
	</style>

	<style name="unread_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:background">@drawable/button_blue</item>
		<item name="android:backgroundTint">#f00</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:textColor">#fff</item>
	</style>

	<style name="MyDatePicker">
		<item name="android:calendarViewShown">false</item>
		<item name="android:datePickerMode">spinner</item>
		<item name="android:spinnersShown">true</item>
		<item name="android:scaleX">@dimen/datepicker_scale</item>
	</style>

</resources>