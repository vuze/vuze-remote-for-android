<?xml version="1.0" encoding="utf-8"?>
<com.android.music.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/list_selector"
	android:padding="10dp"
	android:paddingLeft="0dp" >

	<TextView
		android:id="@+id/peerrow_ip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/peerrow_client"
		android:layout_below="@+id/peerrow_client"
		android:layout_toLeftOf="@+id/peerrow_ul"
		android:textSize="10sp"
		tools:ignore="SmallSp" />

	<TextView
		android:id="@+id/peerrow_cc"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:gravity="center_vertical"
		android:maxLines="1" />

	<TextView
		android:id="@+id/peerrow_client"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/peerrow_dl"
		android:layout_toRightOf="@+id/peerrow_cc"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="@dimen/row_title_fontsize" />

	<TextView
		android:id="@+id/peerrow_pct"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5dp"
		android:gravity="center_vertical" />

	<TextView
		android:id="@+id/peerrow_dl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/peerrow_pct" />

	<TextView
		android:id="@+id/peerrow_ul"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/peerrow_dl"
		android:layout_toLeftOf="@+id/peerrow_pct" />

</com.android.music.CheckableRelativeLayout>