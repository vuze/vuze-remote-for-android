<?xml version="1.0" encoding="utf-8"?>
<com.android.music.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/list_selector"
	android:padding="10dp"
	android:paddingLeft="0dp" >

	<TextView
		android:id="@+id/rcmrow_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="@dimen/row_title_fontsize" />

	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/rcmrow_title"
		android:layout_margin="0dp"
		android:gravity="fill_horizontal"
		android:orientation="horizontal"
		android:weightSum="1" >

		<TextView
			android:id="@+id/rcmrow_info"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<TextView
			android:id="@+id/rcmrow_size"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center_vertical|end"
			android:paddingLeft="10dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="@dimen/row_title_fontsize" />

	</LinearLayout>

	<TextView
		android:id="@+id/rcmrow_tags"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout1"
		android:paddingTop="5dp"
		android:textAppearance="?android:attr/textAppearanceSmall" />

</com.android.music.CheckableRelativeLayout>